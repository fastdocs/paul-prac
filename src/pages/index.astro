    <script>
      // Hamburger Menu Toggle
      const menuButton = document.getElementById("menuButton");
      const mobileMenu = document.getElementById("mobileMenu");

      menuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
        mobileMenu?.classList.toggle("flex");
      });

      // Close menu when clicking on a link
      const mobileLinks = mobileMenu?.querySelectorAll("a");
      mobileLinks?.forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu?.classList.add("hidden");
          mobileMenu?.classList.remove("flex");
        });
      });

      // Easter Egg: Image Bounce Toggle (5 clicks to activate, 5 clicks to deactivate)
      const paulImage = document.getElementById("paulImage");
      let clickCount = 0;
      let isBouncing = false;

      paulImage?.addEventListener("click", () => {
        clickCount++;

        if (clickCount === 5) {
          isBouncing = !isBouncing;

          if (isBouncing) {
            paulImage.classList.add("animate-bounce");
          } else {
            paulImage.classList.remove("animate-bounce");
          }

          // Reset counter for next toggle
          clickCount = 0;
        }
      });

      // Phone Button Toggle
      const button = document.getElementById("phoneButton");
      let isRevealed = false;
      const phoneNumber = "+49 0176 95293152"; // Hier deine Handynummer eintragen

      button?.addEventListener("click", () => {
        if (!isRevealed) {
          button.textContent = phoneNumber;
          isRevealed = true;
        } else {
          button.textContent = "Telefonnummer anzeigen";
          isRevealed = false;
        }
      });
    </script>
